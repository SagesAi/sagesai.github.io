---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/">
            <img class="h-10 w-auto" src="/images/terminal_agent_logo.png" alt="Terminal Agent Logo" />
          </a>
        </div>
        <nav class="ml-6 flex space-x-8">
          <a href="/" class="inline-flex items-center px-1 pt-1 border-b-2 border-primary-500 text-sm font-medium text-gray-900">
            {t('nav.home')}
          </a>
          <a href="/blog" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
            {t('nav.blog')}
          </a>
          <a href="https://github.com/SagesAi/terminal-agent" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
            {t('nav.github')}
          </a>
        </nav>
      </div>
      <div class="flex items-center">
        <LanguageSwitcher />
      </div>
    </div>
  </div>
</header>
