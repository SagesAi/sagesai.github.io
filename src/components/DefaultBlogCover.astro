---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="default-blog-cover">
  <div class="cover-content">
    <div class="title-container">
      <h3>{title}</h3>
    </div>
    <div class="terminal-agent-logo">
      <span>Terminal Agent</span>
    </div>
  </div>
</div>

<style>
  .default-blog-cover {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
    position: relative;
    overflow: hidden;
  }
  
  .cover-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }
  
  .title-container {
    background-color: rgba(0, 0, 0, 0.6);
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    max-width: 90%;
    text-align: center;
  }
  
  .title-container h3 {
    color: white;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
  }
  
  .terminal-agent-logo {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    background-color: rgba(0, 0, 0, 0.7);
    color: #38bdf8;
    font-family: monospace;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
  }
  
  /* 添加终端风格的装饰元素 */
  .default-blog-cover::before {
    content: "";
    position: absolute;
    top: 1rem;
    left: 1rem;
    width: 0.75rem;
    height: 0.75rem;
    background-color: #ff5f56;
    border-radius: 50%;
    box-shadow: 1.25rem 0 0 #ffbd2e, 2.5rem 0 0 #27c93f;
  }
  
  .default-blog-cover::after {
    content: "";
    position: absolute;
    bottom: 2rem;
    left: 1rem;
    width: 3rem;
    height: 0.5rem;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 0.25rem;
    animation: cursor-blink 1.5s infinite;
  }
  
  @keyframes cursor-blink {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }
</style>
